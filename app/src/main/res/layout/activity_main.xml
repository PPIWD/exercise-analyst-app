<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DataCollectionActivity">

    <TextView
        android:id="@+id/tv_device_mac_address"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/device_mac_address"
        android:layout_marginTop="60dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/et_device_mac_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_device_mac_address"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:hint="@string/device_mac_address_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_mac_address" />

    <Button
        android:id="@+id/btn_start_meta_motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_meta_motion_service"
        app:layout_constraintBottom_toTopOf="@id/btn_stop_meta_motion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_device_mac_address" />

    <Button
        android:id="@+id/btn_stop_meta_motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_meta_motion_service"
        app:layout_constraintBottom_toTopOf="@id/btn_wipe_db"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_meta_motion" />

    <Button
        android:id="@+id/btn_wipe_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wipe_db"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_stop_meta_motion" />

</androidx.constraintlayout.widget.ConstraintLayout>